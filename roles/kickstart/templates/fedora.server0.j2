# {{ ansible_managed }}

LABEL Main Menu
        MENU LABEL Main Menu
        KERNEL menu.c32
        APPEND pxelinux.cfg/default

LABEL Linux Menu
        MENU LABEL Linux Menu
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/LinuxMenu

#
# Fedora 30
#
label Fedora-30-x86_64 Server
  menu label Install Fedora-30-x86_64 Server
  kernel images/fedora/30/x86_64/vmlinuz
  append initrd=images/fedora/30/x86_64/initrd.img net.ifnames=0 biosdevname=0 noipv6 keymap=us lang=en_US bootdev=eth0 ip=dhcp 
inst.stage2={{linux_install_server_url}}/fedora/releases/30/Server/x86_64/os/ inst.repo={{linux_install_server_url}}/fedora/releases/30/Server/x86_64/os/

label Fedora-30-x86_64 Workstation
