[fedora-{{linux_install_server_hostname}}]
baseurl = {{linux_install_server_url}}/fedora/releases/$releasever/Everything/$basearch/os/
enabled = 0
failovermethod = priority
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
keepcache = 0
metadata_expire = 1d
name = {{linux_install_server_hostname}}-Fedora$releasever-$basearch-fedora
repo_gpgcheck = 0
skip_if_unavailable = 0

[updates-{{linux_install_server_hostname}}]
baseurl = {{linux_install_server_url}}/fedora/updates/$releasever/Everything/$basearch/
enabled = 0
failovermethod = priority
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
keepcache = 0
metadata_expire = 1d
name = {{linux_install_server_hostname}}-Fedora$releasever-$basearch-updates
repo_gpgcheck = 0
skip_if_unavailable = 0

