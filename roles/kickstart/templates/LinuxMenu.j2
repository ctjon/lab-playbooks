# {{ ansible_managed }}

default vesamenu.c32
default menu.c32
prompt 0

MENU TITLE Linux Install Main Menu

LABEL Main Menu
        MENU LABEL Main Menu
        KERNEL menu.c32
        APPEND pxelinux.cfg/default

LABEL centos
        MENU CentOS Installs
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/centos

LABEL rhel
        MENU RHEL Installs
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/rhel

LABEL fedora
        MENU Fedora Installs
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/fedora

LABEL ubuntu
        MENU Ubuntu Installs
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/ubuntu

LABEL x1carbon
        MENU x1carbon Installs
        KERNEL menu.c32
        APPEND pxelinux.cfg/Linux/x1carbon

#
# Satellite 6
#
label satellite6
  menu label satellite6 on RHEL8
  kernel images/rhel/8/x86_64/vmlinuz
  append initrd=images/rhel/8/x86_64/initrd.img net.ifnames=0 biosdevname=0 noipv6 ksdevice=eth0 inst.repo={{linux_install_server_url}}/rhel/8/x86_64 inst.ks={{linux_install_server_url}}/ks-configs/satellite6-ks.cfg

