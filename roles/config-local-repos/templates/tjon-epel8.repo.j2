[epel-{{linux_install_server_hostname}}]
baseurl = {{linux_install_server_url}}/epel/{{ansible_distribution_major_version}}/Everything/{{ansible_architecture}}
enabled = 1
failovermethod = priority
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ansible_distribution_major_version}}-{{ansible_architecture}}
keepcache = 0
metadata_expire = 1d
name = {{linux_install_server_hostname}}-EPEL{{ansible_distribution_major_version}}-{{ansible_architecture}}
repo_gpgcheck = 0
skip_if_unavailable = 0

[epel-source-{{linux_install_server_hostname}}]
baseurl = {{linux_install_server_url}}/epel/{{ansible_distribution_major_version}}/Everything/SRPMS
enabled = 1
failovermethod = priority
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-{{ansible_distribution_major_version}}-{{ansible_architecture}}
keepcache = 0
metadata_expire = 1d
name = {{linux_install_server_hostname}}-EPEL{{ansible_distribution_major_version}}-{{ansible_architecture}}
repo_gpgcheck = 0
