[Unit]
Description=Provisioning callback to Ansible
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/curl -s --insecure --data "host_config_key=d43ac6ed-7102-4bfa-9a41-9ed8fd40e79c" https://tower.internal.tjon.net:443/api/v2/job_templates/2579/callback/
ExecStartPost=/usr/bin/systemctl disable ansible-callback

[Install]
WantedBy=multi-user.target

#To enable ansible-callback to run after system reboots
#/usr/bin/systemctl enable ansible-callback

